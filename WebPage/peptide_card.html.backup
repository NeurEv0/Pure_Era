                                        urlLink.href = item.URL;
                                        urlLink.textContent = 'View Article';
                                        urlLink.target = '_blank';
                                        urlLink.rel = 'noopener noreferrer';
                                        urlLink.className = 'literature-link';
                                        literatureDiv.appendChild(urlLink);
                                    }
                                    
