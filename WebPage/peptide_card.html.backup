                if (
                    sidebar && 
                    sidebar.classList.contains('expanded') && 
                    !sidebar.contains(e.target) && 
                    !sidebarToggle.contains(e.target)
                ) {
                    sidebar.classList.remove('expanded');
                }
            });
        });
    </script>
</body>
</html>
