    <!-- 主内容区 -->
    <section>
        <div class="main-content">
            <h1 class="page-title" id="peptide-name"></h1>
            
            <!-- 动态生成的模块容器 -->
            <div id="module-container"></div>
        </div>
    </section>

    <!-- 添加响应式设计的按钮 -->
    <button class="sidebar-toggle" id="sidebar-toggle" aria-label="Toggle sidebar">
        <i class="fas fa-grip-lines"></i>
    </button>
    
    <div class="scroll-top" id="scrollTop">
        <i class="fas fa-arrow-up"></i>
    </div>

    <script>
        // 获取 URL 中的 ID 参数
        const urlParams = new URLSearchParams(window.location.search);
        let peptideIdRaw = urlParams.get('DRAMP ID'); // Correct parameter name is 'DRAMP ID'
        let peptideId = null;
        if (peptideIdRaw) {
            peptideId = peptideIdRaw.split(':')[0]; // 去掉可能存在的后缀，如 ':517'
        }
        
        // 检查 peptideId 是否有效
        if (!peptideId) {
            console.error('无法从URL获取有效的 Peptide ID');
            // 显示错误信息
            document.getElementById('peptide-name').textContent = '';
            const errorMsg = document.createElement('div');
            errorMsg.className = 'error-message';
            errorMsg.textContent = 'Invalid Peptide ID in URL';
            errorMsg.setAttribute('data-translate', ''); // 标记为需要翻译
            document.getElementById('module-container').innerHTML = '';
            document.getElementById('module-container').appendChild(errorMsg);
        } else {
            const DATA_URL = `./Database/${peptideId}.json`;
            // 使用受保护的数据加载方式
            loadProtectedData(DATA_URL, peptideId);
        }

        // 受保护的数据加载函数
        async function loadProtectedData(dataUrl, peptideId) {
            try {
                // 等待保护组件初始化
                if (!window.protectionInstance) {
                    await new Promise(resolve => {
                        const checkProtection = () => {
                            if (window.protectionInstance) {
                                resolve();
                            } else {
                                setTimeout(checkProtection, 100);
                            }
                        };
                        checkProtection();
                    });
                }

                // 使用保护的fetch方法
                const response = await fetch(dataUrl);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                
                // 移除保护元数据（如果存在）
                const cleanData = cleanProtectedData(data);
                
                renderPeptide(cleanData);
                
            } catch (error) {
                console.error('数据加载或解析失败:', error);
                document.getElementById('peptide-name').textContent = '';
                const errorMsg = document.createElement('div');
                errorMsg.className = 'error-message';
                
                // 根据错误类型显示不同的消息
                if (error instanceof SyntaxError) {
                    errorMsg.textContent = 'Failed to parse data. Invalid format.';
                } else if (error.message.includes('HTTP error')) {
                    errorMsg.textContent = `Data file not found or server error (${peptideId}.json).`;
                } else if (error.message.includes('访问被限制') || error.message.includes('请求频率')) {
                    errorMsg.textContent = 'Access temporarily limited. Please try again in a moment.';
                } else {
                    errorMsg.textContent = 'Data loading failed.';
                }
                errorMsg.setAttribute('data-translate', ''); // 标记为需要翻译
                document.getElementById('module-container').innerHTML = '';
                document.getElementById('module-container').appendChild(errorMsg);
            }
        }

        // 清理保护数据函数
        function cleanProtectedData(data) {
            if (data && typeof data === 'object') {
                const cleanData = { ...data };
                delete cleanData._metadata;
                return cleanData;
            }
            return data;
        }

        function renderPeptide(peptide) {
            const pageTitle = document.getElementById('peptide-name');
            // 因为数据在Sequence Information对象内部，需要先检查数据结构
            const peptideData = peptide['Sequence Information'] || peptide;
            pageTitle.textContent = peptideData['Peptide Name'];

            const modules = [
                { id: 'general', title: 'General Information', fields: [
                    'DRAMP ID', 'Peptide Name', 'Source', 'Family', 'Sequence Length', 'Biological Activity',
                    'Gene', 'Sequence', 'UniProt Entry', 'Protein Existence'
                ]},
                { id: 'activity', title: 'Activity Information', fields: [
                    'Biological Activity', 'Target Organism', 'Hemolytic Activity',
                    'Cytotoxicity', 'Binding Target'
                ]},
                { id: 'structure', title: 'Structural Information', fields: [
                    'Linear/Cyclic', 'N-terminal Modification', 'C-terminal Modification',
                    'Nonterminal Modifications and Unusual Amino Acids', 'Stereochemistry',
                    'Structure', 'Structure Description', 'Helical Wheel Diagram',
                    'PDB ID', 'Predicted Structure'
                ]},
                { id: 'properties', title: 'Physico-Chemical Properties', fields: [
                    'Formula', 'Absent Amino Acids', 'Common Amino Acids', 'Mass', 'PI',
                    'Basic Residues', 'Acidic Residues', 'Hydrophobic Residues', 'Net Charge',
                    'Boman Index', 'Hydrophobicity', 'Aliphatic Index', 'Half Life',
                    'Extinction Coefficient Cystines', 'Absorbance 280nm', 'Polar Residues'
                ]},
                { id: 'comments', title: 'Comments Information', fields: [
                    'Function', 'PTM'
                ]},
                { id: 'literature', title: 'Literature Information', fields: [
                    'Literature'  // 只包含Literature字段，因为它是一个完整的对象数组
                ]}
            ];

            const moduleContainer = document.getElementById('module-container');
            moduleContainer.innerHTML = ''; // 清空容器
            
            modules.forEach(moduleConfig => {
                const module = document.createElement('div');
                module.className = 'module';
                module.id = moduleConfig.id;

                const moduleTitle = document.createElement('h3');
                moduleTitle.className = 'module-title';
                moduleTitle.textContent = moduleConfig.title;
                moduleTitle.setAttribute('data-translate', ''); // 标记为需要翻译
                module.appendChild(moduleTitle);

                // 特殊处理Literature模块
                if (moduleConfig.id === 'literature') {
                    const literatureData = peptideData['Literature'];
                    if (Array.isArray(literatureData) && literatureData.length > 0) {
                        const literatureContainer = document.createElement('div');
                        literatureContainer.className = 'literature-container';
                        
                        literatureData.forEach((ref, index) => {
                            const literatureDiv = document.createElement('div');
                            literatureDiv.className = 'literature-item';
                            literatureDiv.style.marginBottom = '20px';
                            literatureDiv.style.padding = '15px';
                            literatureDiv.style.border = '1px solid var(--border)';
                            literatureDiv.style.borderRadius = '8px';
                            literatureDiv.style.backgroundColor = '#f9f9f9';
                            
                            // 处理标题
                            if (ref.Title) {
                                const titleElem = document.createElement('h4');
                                titleElem.textContent = ref.Title;
                                titleElem.style.color = 'var(--primary)';
                                titleElem.style.marginBottom = '10px';
                                titleElem.setAttribute('data-translate', '');
                                literatureDiv.appendChild(titleElem);
                            }
                            
                            // 处理作者
                            if (ref.Author) {
                                const authorElem = document.createElement('p');
                                authorElem.innerHTML = '<strong>Author:</strong> ' + ref.Author;
                                authorElem.style.marginBottom = '8px';
                                authorElem.setAttribute('data-translate', '');
                                literatureDiv.appendChild(authorElem);
                            }
                            
                            // 处理引用
                            if (ref.Reference) {
                                const refElem = document.createElement('p');
                                refElem.innerHTML = '<strong>Reference:</strong> <em>' + ref.Reference + '</em>';
                                refElem.style.marginBottom = '8px';
                                literatureDiv.appendChild(refElem);
                            }
                            
                            // 处理PubMed ID和链接
                            if (ref['Pubmed ID']) {
                                const pubmedContainer = document.createElement('p');
                                pubmedContainer.style.marginBottom = '8px';
                                
                                const pubmedLabel = document.createElement('strong');
                                pubmedLabel.textContent = 'PubMed ID: ';
                                pubmedContainer.appendChild(pubmedLabel);
                                
                                const pubmedId = document.createElement('span');
                                pubmedId.textContent = ref['Pubmed ID'];
                                pubmedContainer.appendChild(pubmedId);
                                
                                // 添加PubMed链接
                                const pubmedLink = document.createElement('a');
                                pubmedLink.href = `https://pubmed.ncbi.nlm.nih.gov/${ref['Pubmed ID']}/`;
                                pubmedLink.textContent = ' [View on PubMed]';
                                pubmedLink.target = '_blank';
                                pubmedLink.rel = 'noopener noreferrer';
                                pubmedLink.className = 'literature-link';
                                pubmedLink.style.marginLeft = '10px';
                                pubmedContainer.appendChild(pubmedLink);
                                
                                literatureDiv.appendChild(pubmedContainer);
                            }
                            
                            // 处理DOI链接 - 从参考文献中提取
                            if (ref.Reference) {
                                const doiMatch = ref.Reference.match(/doi:([^\s.,;]+)/i);
                                if (doiMatch) {
                                    const doi = doiMatch[1];
                                    
                                    const doiContainer = document.createElement('p');
                                    doiContainer.style.marginBottom = '8px';
                                    
                                    const doiLabel = document.createElement('strong');
                                    doiLabel.textContent = 'DOI: ';
                                    doiContainer.appendChild(doiLabel);
                                    
                                    const doiText = document.createElement('span');
                                    doiText.textContent = doi;
                                    doiContainer.appendChild(doiText);
                                    
                                    // 添加DOI链接
                                    const doiLink = document.createElement('a');
                                    doiLink.href = `https://doi.org/${doi}`;
                                    doiLink.textContent = ' [View on CrossRef]';
                                    doiLink.target = '_blank';
                                    doiLink.rel = 'noopener noreferrer';
                                    doiLink.className = 'literature-link';
                                    doiLink.style.marginLeft = '10px';
                                    doiContainer.appendChild(doiLink);
                                    
                                    literatureDiv.appendChild(doiContainer);
                                }
                            }
                            
                            // 处理原始URL链接
                            if (ref.URL) {
                                const urlContainer = document.createElement('p');
                                urlContainer.style.marginBottom = '8px';
                                
                                const urlLink = document.createElement('a');
                                urlLink.href = ref.URL;
                                urlLink.textContent = 'View Original Article';
                                urlLink.target = '_blank';
                                urlLink.rel = 'noopener noreferrer';
                                urlLink.className = 'literature-link';
                                urlLink.setAttribute('data-translate', '');
                                urlContainer.appendChild(urlLink);
                                
                                literatureDiv.appendChild(urlContainer);
                            }
                            
                            literatureContainer.appendChild(literatureDiv);
                        });
                        
                        module.appendChild(literatureContainer);
                    } else {
                        // 无文献数据的情况
                        const noDataMsg = document.createElement('p');
                        noDataMsg.textContent = 'No literature information available for this peptide.';
                        noDataMsg.style.fontStyle = 'italic';
                        noDataMsg.style.color = '#666';
                        noDataMsg.style.textAlign = 'center';
                        noDataMsg.style.padding = '20px';
                        noDataMsg.setAttribute('data-translate', '');
                        module.appendChild(noDataMsg);
                    }
                } else {
                    // 处理其他模块
                    const table = document.createElement('table');
                    table.className = 'info-table';

                    moduleConfig.fields.forEach(field => {
                        const row = document.createElement('tr');
                        const th = document.createElement('th');
                        th.textContent = field;
                        th.setAttribute('data-translate', ''); // 标记为需要翻译
                        row.appendChild(th);

                        const td = document.createElement('td');
                        let value = peptideData[field];

                        // 特殊处理Target Organism字段，以分隔的形式展示
                        if (field === 'Target Organism' && value) {
                            // 创建可滚动容器
                            const scrollContainer = document.createElement('div');
                            scrollContainer.className = 'scrollable-content';
                            
                            const organismList = document.createElement('ul');
                            organismList.className = 'organism-list';
                            
                            // 如果是长字符串，尝试解析为更友好的格式
                            if (typeof value === 'string') {
                                // 处理特殊格式：添加说明标题
                                if (value.includes('Note:')) {
                                    // 分离注释和主要内容
                                    const parts = value.split('Note:');
                                    const mainContent = parts[0].trim();
                                    const note = 'Note:' + parts[1].trim();
                                    
                                    // 处理主要内容部分
                                    processOrganismString(mainContent, organismList);
                                    
                                    // 添加注释作为单独的项
                                    const noteItem = document.createElement('li');
                                    noteItem.className = 'organism-item';
                                    noteItem.style.fontStyle = 'italic';
                                    noteItem.style.marginTop = '10px';
                                    noteItem.style.color = '#666';
                                    noteItem.textContent = note;
                                    noteItem.setAttribute('data-translate', ''); // 标记为需要翻译
                                    organismList.appendChild(noteItem);
                                } else {
                                    // 处理普通格式
                                    processOrganismString(value, organismList);
                                }
                            }
                            
                            scrollContainer.appendChild(organismList);
                            td.appendChild(scrollContainer);
                        }
                        // 特殊处理序列字段，应用新样式
                        else if (field === 'Sequence' && value) {
                            const sequenceElem = document.createElement('div');
                            sequenceElem.className = 'sequence';
                            sequenceElem.textContent = value;
                            sequenceElem.classList.add('no-translate'); // 序列不应被翻译
                            td.appendChild(sequenceElem);
                        }
                        // 特殊处理生物活性字段，应用标签样式
                        else if (field === 'Biological Activity' && value) {
                            if (Array.isArray(value)) {
                                value.forEach(activity => {
                                    const tag = document.createElement('span');
                                    tag.className = 'activity-tag';
                                    tag.textContent = activity;
                                    tag.setAttribute('data-translate', ''); // 标记为需要翻译
                                    td.appendChild(tag);
                                });
                            } else {
                                const tag = document.createElement('span');
                                tag.className = 'activity-tag';
                                tag.textContent = value;
                                tag.setAttribute('data-translate', ''); // 标记为需要翻译
                                td.appendChild(tag);
                            }
                        }
                        // 特殊处理结构字段，添加3D结构查看器
                        else if ((field === 'Structure' || field === 'Predicted Structure' || field === 'PDB ID') && value) {
                            if (field === 'PDB ID' && value !== 'None') {
                                // 为PDB ID创建链接和嵌入式查看器
                                const pdbLink = document.createElement('a');
                                pdbLink.href = `https://www.rcsb.org/structure/${value}`;
                                pdbLink.textContent = value;
                                pdbLink.target = '_blank';
                                pdbLink.rel = 'noopener noreferrer';
                                pdbLink.className = 'structure-link';
                                td.appendChild(pdbLink);
                                
                                // 添加3D结构查看器
                                const viewerContainer = document.createElement('div');
                                viewerContainer.className = 'structure-viewer';
                                
                                // 使用iframe嵌入PDB查看器
                                const viewer = document.createElement('iframe');
                                viewer.src = `https://www.rcsb.org/3d-view?id=${value}`;
                                viewer.width = '100%';
                                viewer.height = '100%';
                                viewer.frameBorder = '0';
                                viewerContainer.appendChild(viewer);
                                
                                td.appendChild(viewerContainer);
                            } else if (field === 'Structure' && typeof value === 'string' && value.includes('http')) {
                                // 处理结构URL
                                const structureLink = document.createElement('a');
                                structureLink.href = value;
                                structureLink.textContent = 'View Structure';
                                structureLink.target = '_blank';
                                structureLink.rel = 'noopener noreferrer';
                                structureLink.className = 'structure-link';
                                structureLink.setAttribute('data-translate', '');
                                td.appendChild(structureLink);
                            } else if (value === 'None' || value === 'Not found') {
                                const noStructure = document.createElement('div');
                                noStructure.className = 'no-structure';
                                noStructure.textContent = 'No structure available';
                                noStructure.setAttribute('data-translate', '');
                                td.appendChild(noStructure);
                            } else {
                                const textElem = document.createElement('span');
                                textElem.textContent = value;
                                td.appendChild(textElem);
                            }
                        }
                        // 处理数组和链接
                        else if (Array.isArray(value)) {
                            if (field === 'UniProt Entry' || field === 'Literature') {
                                value.forEach(item => {
                                    if (field === 'UniProt Entry') {
                                        const link = document.createElement('a');
                                        link.href = item;
                                        link.textContent = item;
                                        td.appendChild(link);
                                        td.appendChild(document.createElement('br'));
                                    } else {
                                        const textElem = document.createElement('span');
                                        textElem.textContent = item;
                                        textElem.setAttribute('data-translate', ''); // 标记为需要翻译
                                        td.appendChild(textElem);
                                        td.appendChild(document.createElement('br'));
                                    }
                                });
                            } else {
                                const textContainer = document.createElement('span');
                                textContainer.textContent = value.join(', ');
                                textContainer.setAttribute('data-translate', ''); // 标记为需要翻译
                                td.appendChild(textContainer);
                            }
                        } else if (field === 'Literature' && value && typeof value === 'object') {
                            // 处理Literature可能是对象数组的情况
                            if (Array.isArray(value)) {
                                value.forEach(item => {
                                    if (typeof item === 'object') {
                                        const literatureDiv = document.createElement('div');
                                        literatureDiv.style.marginBottom = '10px';
                                        
                                        // 处理标题
                                        if (item.Title) {
                                            const titleElem = document.createElement('strong');
                                            titleElem.textContent = item.Title;
                                            titleElem.setAttribute('data-translate', '');
                                            literatureDiv.appendChild(titleElem);
                                            literatureDiv.appendChild(document.createElement('br'));
                                        }
                                        
                                        // 处理作者
                                        if (item.Author) {
                                            const authorElem = document.createElement('span');
                                            authorElem.textContent = item.Author;
                                            authorElem.setAttribute('data-translate', '');
                                            literatureDiv.appendChild(authorElem);
                                            literatureDiv.appendChild(document.createElement('br'));
                                        }
                                        
                                        // 处理引用
                                        if (item.Reference) {
                                            const refElem = document.createElement('em');
                                            refElem.textContent = item.Reference;
                                            literatureDiv.appendChild(refElem);
                                            literatureDiv.appendChild(document.createElement('br'));
                                        }
                                        
                                        // 处理PubMed ID
                                        if (item['Pubmed ID']) {
                                            const pubmedElem = document.createElement('span');
                                            pubmedElem.textContent = 'PubMed ID: ' + item['Pubmed ID'];
                                            literatureDiv.appendChild(pubmedElem);
                                            
                                            // 添加PubMed链接
                                            const pubmedLink = document.createElement('a');
                                            pubmedLink.href = `https://pubmed.ncbi.nlm.nih.gov/${item['Pubmed ID']}/`;
                                            pubmedLink.textContent = ' [PubMed]';
                                            pubmedLink.target = '_blank';
                                            pubmedLink.rel = 'noopener noreferrer';
                                            pubmedLink.className = 'literature-link';
                                            literatureDiv.appendChild(pubmedLink);
                                            literatureDiv.appendChild(document.createElement('br'));
                                        }
                                        
                                        // 处理DOI链接 - 从参考文献中提取
                                        if (item.Reference) {
                                            const doiMatch = item.Reference.match(/doi:([^\s.,;]+)/i);
                                            if (doiMatch) {
                                                const doi = doiMatch[1];
                                                
                                                const doiElem = document.createElement('span');
                                                doiElem.textContent = 'DOI: ' + doi;
                                                literatureDiv.appendChild(doiElem);
                                                
                                                // 添加DOI链接
                                                const doiLink = document.createElement('a');
                                                doiLink.href = `https://doi.org/${doi}`;
                                                doiLink.textContent = ' [CrossRef]';
                                                doiLink.target = '_blank';
                                                doiLink.rel = 'noopener noreferrer';
                                                doiLink.className = 'literature-link';
                                                literatureDiv.appendChild(doiLink);
                                                literatureDiv.appendChild(document.createElement('br'));
                                            }
                                        }
                                        
                                        // 处理URL链接
                                        if (item.URL) {
                                            const urlLink = document.createElement('a');
                                            urlLink.href = item.URL;
                                            urlLink.textContent = 'View Article';
                                            urlLink.target = '_blank';
                                            urlLink.rel = 'noopener noreferrer';
                                            urlLink.className = 'literature-link';
                                            literatureDiv.appendChild(urlLink);
                                        }
                                        
                                        // 添加类以美化样式
                                        literatureDiv.className = 'literature-item';
                                        
                                        td.appendChild(literatureDiv);
                                    } else {
                                        const textElem = document.createElement('span');
                                        textElem.textContent = item;
                                        textElem.setAttribute('data-translate', '');
                                        td.appendChild(textElem);
                                        td.appendChild(document.createElement('br'));
                                    }
                                });
                            } else {
                                const textElem = document.createElement('span');
                                textElem.textContent = JSON.stringify(value);
                                td.appendChild(textElem);
                            }
                        } else if (field === 'Pubmed ID' && value) {
                            const link = document.createElement('a');
                            link.href = `http://www.ncbi.nlm.nih.gov/pubmed/?term=${value}`;
                            link.textContent = value;
                            td.appendChild(link);
                        } else {
                            const textElem = document.createElement('span');
                            textElem.textContent = value || 'Not found';
                    // 特殊处理Target Organism字段，以分隔的形式展示
                    if (field === 'Target Organism' && value) {
                        // 创建可滚动容器
                        const scrollContainer = document.createElement('div');
                        scrollContainer.className = 'scrollable-content';
                        
                        const organismList = document.createElement('ul');
                        organismList.className = 'organism-list';
                        
                        // 如果是长字符串，尝试解析为更友好的格式
                        if (typeof value === 'string') {
                            // 处理特殊格式：添加说明标题
                            if (value.includes('Note:')) {
                                // 分离注释和主要内容
                                const parts = value.split('Note:');
                                const mainContent = parts[0].trim();
                                const note = 'Note:' + parts[1].trim();
                                
                                // 处理主要内容部分
                                processOrganismString(mainContent, organismList);
                                
                                // 添加注释作为单独的项
                                const noteItem = document.createElement('li');
                                noteItem.className = 'organism-item';
                                noteItem.style.fontStyle = 'italic';
                                noteItem.style.marginTop = '10px';
                                noteItem.style.color = '#666';
                                noteItem.textContent = note;
                                noteItem.setAttribute('data-translate', ''); // 标记为需要翻译
                                organismList.appendChild(noteItem);
                            } else {
                                // 处理普通格式
                                processOrganismString(value, organismList);
                            }
                        }
                        
                        scrollContainer.appendChild(organismList);
                        td.appendChild(scrollContainer);
                    }
                    // 特殊处理序列字段，应用新样式
                    else if (field === 'Sequence' && value) {
                        const sequenceElem = document.createElement('div');
                        sequenceElem.className = 'sequence';
                        sequenceElem.textContent = value;
                        sequenceElem.classList.add('no-translate'); // 序列不应被翻译
                        td.appendChild(sequenceElem);
                    }
                    // 特殊处理生物活性字段，应用标签样式
                    else if (field === 'Biological Activity' && value) {
                        if (Array.isArray(value)) {
                            value.forEach(activity => {
                                const tag = document.createElement('span');
                                tag.className = 'activity-tag';
                                tag.textContent = activity;
                                tag.setAttribute('data-translate', ''); // 标记为需要翻译
                                td.appendChild(tag);
                            });
                        } else {
                            const tag = document.createElement('span');
                            tag.className = 'activity-tag';
                            tag.textContent = value;
                            tag.setAttribute('data-translate', ''); // 标记为需要翻译
                            td.appendChild(tag);
                        }
                    }
                    // 特殊处理结构字段，添加3D结构查看器
                    else if ((field === 'Structure' || field === 'Predicted Structure' || field === 'PDB ID') && value) {
                        if (field === 'PDB ID' && value !== 'None') {
                            // 为PDB ID创建链接和嵌入式查看器
                            const pdbLink = document.createElement('a');
                            pdbLink.href = `https://www.rcsb.org/structure/${value}`;
                            pdbLink.textContent = value;
                            pdbLink.target = '_blank';
                            pdbLink.rel = 'noopener noreferrer';
                            pdbLink.className = 'structure-link';
                            td.appendChild(pdbLink);
                            
                            // 添加3D结构查看器
                            const viewerContainer = document.createElement('div');
                            viewerContainer.className = 'structure-viewer';
                            
                            // 使用iframe嵌入PDB查看器
