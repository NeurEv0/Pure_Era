                                    // 处理DOI链接 - 从参考文献中提取
                                    if (item.Reference) {
                                        const doiMatch = item.Reference.match(/doi:([^\s.,;]+)/i);
                                        if (doiMatch) {
                                            const doi = doiMatch[1];
                                            
                                            const doiElem = document.createElement('span');
                                            doiElem.textContent = 'DOI: ' + doi;
